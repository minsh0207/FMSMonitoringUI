        <!--<Separator Grid.Row="0" Opacity="0" Height="3"/>-->

        <Border Name="borBox07" Grid.Row="0" Grid.Column="0" Margin="1" BorderBrush="Black" BorderThickness="1" Background="Gray" MouseDown="BoxHorizon_MouseClick">
